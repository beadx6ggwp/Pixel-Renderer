{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug Pixel-Renderer",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\CodingTool\\Git\\bin\\bash.exe",  // 你的 Git Bash 路徑，用 \\ 轉義；如果不同，調整
                    "args": ["-c"]  // -c 讓 bash 執行命令
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "make release Pixel-Renderer",
            "type": "shell",
            "command": "make",
            "args": ["release"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:\\CodingTool\\Git\\bin\\bash.exe",
                    "args": ["-c"]
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}