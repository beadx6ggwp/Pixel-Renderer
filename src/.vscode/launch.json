{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Pixel-Renderer (with breakpoints)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/PixelRenderer_debug.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make debug Pixel-Renderer"
        },
        {
            "name": "Release Pixel-Renderer (full speed)",
